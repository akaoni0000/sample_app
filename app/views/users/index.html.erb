<div class="container text-center">
    <h1>ユーザーリスト</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">名前</th>
                <th scope="col">メールアドレス</th>
                <th scope="col">編集</th>
                <th scope="col">削除</th>
            </tr>
        </thead>
        <tbody>
            <% @i=1 %>
            <% @users.each do |user| %>
                <tr>
                    <th scope="row"><%= @i %></th>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= link_to "info", user_path(user.id), class:"btn btn-info" %></td>
                    <td><%= link_to "削除", user_path(user.id), class:"btn btn-danger", method: :delete %></td>
                </tr>
                <% @i+=1 %>
            <% end %>
        </tbody>
    </table>
    <%= link_to "ユーザー登録", new_user_path, class:"btn btn-success" %>
</div>
