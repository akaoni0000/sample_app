<h1 class="text-center">ユーザー登録</h1>
<div class="container">
    <%= form_with(model: @user, local: true) do |f| %>

        <div class="form-floating">
            <%= f.text_field :name, placeholder:"name", class:"form-control", id:"floatingPassword" %>
            <label for="floatingPassword">name</label>
        </div>

        <div class="form-floating mb-3">
            <%= f.email_field :email, placeholder:"name@example.com", id:"floatingInput", class:"form-control" %>
            <%= f.label :メールアドレス, for:"floatingInput" %>
        </div>

        <div class="form-floationg mb-3">
            <%= f.file_field :avator, id:"floatingInput", class:"form-control" %>
            <%= f.label :avator, for:"floationInput" %>
        </div>

        <div style="text-align:right;">
            <%= f.submit "登録", class:"btn btn-primary" %>
        </div>

    <% end %>
</div>